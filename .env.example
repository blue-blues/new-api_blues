# One-API Docker Configuration
# Copy this file to .env and modify the values as needed

# Security Configuration
SESSION_SECRET=your-session-secret-change-me-to-random-string
REDIS_PASSWORD=redis-password-change-me
INITIAL_ROOT_TOKEN=your-initial-root-token-optional
INITIAL_ROOT_ACCESS_TOKEN=your-initial-access-token-optional

# Database Configuration (uncomment the one you want to use)
# For SQLite (default, no additional setup required)
DATA_SOURCE_NAME=/data/one-api.db

# For MySQL (uncomment and configure)
# MYSQL_ROOT_PASSWORD=root-password-change-me
# MYSQL_USER=oneapi
# MYSQL_PASSWORD=mysql-password-change-me
# SQL_DSN=mysql://oneapi:mysql-password-change-me@mysql:3306/oneapi

# For PostgreSQL (uncomment and configure)
# POSTGRES_USER=oneapi
# POSTGRES_PASSWORD=postgres-password-change-me
# SQL_DSN=postgres://oneapi:postgres-password-change-me@postgres:5432/oneapi?sslmode=disable

# Redis Configuration (optional but recommended)
REDIS_CONN_STRING=redis://:redis-password-change-me@redis:6379

# Server Configuration
PORT=3000
SERVER_ADDRESS=http://localhost:3000
THEME=air

# Performance Configuration
MEMORY_CACHE_ENABLED=true
SYNC_FREQUENCY=600
BATCH_UPDATE_ENABLED=true
BATCH_UPDATE_INTERVAL=5

# Rate Limiting
GLOBAL_API_RATE_LIMIT=480
GLOBAL_WEB_RATE_LIMIT=240

# Channel Testing (optional, in seconds)
# CHANNEL_TEST_FREQUENCY=3600

# Monitoring
ENABLE_METRIC=true
METRIC_QUEUE_SIZE=10
METRIC_SUCCESS_RATE_THRESHOLD=0.8

# Debug Configuration (set to true for development)
DEBUG=false
DEBUG_SQL=false
GIN_MODE=release

# Relay Configuration
RELAY_TIMEOUT=60
RELAY_PROXY=

# Gemini Configuration
GEMINI_VERSION=v1
GEMINI_SAFETY_SETTING=BLOCK_NONE

# Email Configuration (optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_ACCOUNT=your-email@gmail.com
# SMTP_FROM=your-email@gmail.com
# SMTP_TOKEN=your-app-password

# OAuth Configuration (optional)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# OIDC Configuration (optional)
# OIDC_CLIENT_ID=your-oidc-client-id
# OIDC_CLIENT_SECRET=your-oidc-client-secret
# OIDC_WELL_KNOWN=https://your-provider/.well-known/openid_configuration

# Other Configuration
ONLY_ONE_LOG_FILE=false
NODE_TYPE=master
POLLING_INTERVAL=60